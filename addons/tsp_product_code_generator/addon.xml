<?xml version="1.0"?>
<addon scheme="2.0">
	<id>tsp_product_code_generator</id>
	<name>The Software People - Product Code Generator</name>
	<description>The Software People (TSP) Product Code Generator generates a product code for new products or for any product that does not have one. Code generation is based on a set of combiniations specified in settings.</description>
	<version>1.0</version>
	<priority>1111000011</priority>
	<position>0</position>
	<status>active</status>
	<default_language>en</default_language>
	<auto_install>COMMUNITY,PROFESSIONAL,MULTIVENDOR,ULTIMATE</auto_install>
	<language_variables>
		<item lang="en" id="tsp_product_code_generator">The Software People - Product Code Generator</item>
	</language_variables>
	<settings>
		<sections>
			<section id="prefix_settings">
				<!-- Tab name in the default language -->
				<name>Prefix Settings</name>		
				<items>
					<item id="header_prefix">
						<type>header</type>
						<name>Prefixes</name>
					</item>
					<item id="first_prefix_type">
						<name>First Prefix for Product Code</name>
						<type>selectbox</type>
						<default_value>company_name</default_value>
						<variants>
							<item id="auto_gen">
								<name>Auto-Generated</name>
							</item>
							<item id="product_id">
								<name>Product ID</name>
							</item>
							<item id="company_name">
								<name>First Letters of Company Name</name>
							</item>
							<item id="product_name">
								<name>First Letters of Product Name</name>
							</item>
							<item id="category_name">
								<name>First Letters of Category Name</name>
							</item>
						</variants>
					</item>
					<item id="second_prefix_type">
						<name>Second Prefix for Product Code</name>
						<type>selectbox</type>
						<default_value>none</default_value>
						<variants>
							<item id="none">
								<name>None</name>
							</item>
							<item id="auto_gen">
								<name>Auto-Generated</name>
							</item>
							<item id="product_id">
								<name>Product ID</name>
							</item>
							<item id="company_name">
								<name>First Letters of Company Name</name>
							</item>
							<item id="product_name">
								<name>First Letters of Product Name</name>
							</item>
							<item id="category_name">
								<name>First Letters of Category Name</name>
							</item>
						</variants>
					</item>
					<item id="third_prefix_type">
						<name>Third Prefix for Product Code</name>
						<type>selectbox</type>
						<default_value>none</default_value>
						<variants>
							<item id="none">
								<name>None</name>
							</item>
							<item id="auto_gen">
								<name>Auto-Generated</name>
							</item>
							<item id="product_id">
								<name>Product ID</name>
							</item>
							<item id="company_name">
								<name>First Letters of Company Name</name>
							</item>
							<item id="product_name">
								<name>First Letters of Product Name</name>
							</item>
							<item id="category_name">
								<name>First Letters of Category Name</name>
							</item>
						</variants>
					</item>
					<item id="last_prefix_type">
						<name>Last Prefix for Product Code</name>
						<type>selectbox</type>
						<default_value>auto_gen</default_value>
						<variants>
							<item id="auto_gen">
								<name>Auto-Generated</name>
							</item>
							<item id="product_id">
								<name>Product ID</name>
							</item>
							<item id="company_name">
								<name>First Letters of Company Name</name>
							</item>
							<item id="product_name">
								<name>First Letters of Product Name</name>
							</item>
							<item id="category_name">
								<name>First Letters of Category Name</name>
							</item>
						</variants>
					</item>
					<item id="header_settings">
						<type>header</type>
						<name>Generated Prefix Settings</name>
					</item>
					<item id="seperator">
						<name>Product Code Seperator</name>
						<type>input</type>
						<default_value>-</default_value>
					</item>
					<item id="prefix_auto_gen_len">
						<name>Maximum Number of Chars for Autogenerated Prefix</name>
						<type>input</type>
						<default_value>3</default_value>
					</item>
					<item id="prefix_auto_gen_type">
						<name>Type of Chars for Autogenerated Prefix</name>
						<type>selectbox</type>
						<default_value>numbers</default_value>
						<variants>
							<item id="mixed">
								<name>Mixed (Numbers/Chars)</name>
							</item>
							<item id="numbers">
								<name>Numbers Only</name>
							</item>
							<item id="chars">
								<name>Chars Only</name>
							</item>
						</variants>
					</item>
					<item id="prefix_company_name_len">
						<name>Maximum Number of Chars for the Company Name</name>
						<type>input</type>
						<default_value>3</default_value>
					</item>
					<item id="prefix_product_name_len">
						<name>Maximum Number of Chars for Product Name Prefix</name>
						<type>input</type>
						<default_value>3</default_value>
					</item>
					<item id="prefix_category_name_len">
						<name>Maximum Number of Chars for Category Name Prefix</name>
						<type>input</type>
						<default_value>3</default_value>
					</item>
				</items>
			</section>
		</sections>
	</settings>
	<functions>
		<item for="uninstall">fn_tsppcg_uninstall_languages</item>
	</functions>
</addon>
